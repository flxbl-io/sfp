{
    "compileOnSave": true,
    "compilerOptions": {
        "composite": true,
        "outDir": "./lib",
        "rootDir": "src",
        "inlineSourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "module": "NodeNext",
        "target": "ES2020",
        "lib": ["ES2020"],
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "lib","tests"]
}
