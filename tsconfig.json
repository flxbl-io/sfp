{
    "compileOnSave": true,
    "compilerOptions": {
        "composite": true,
        "outDir": "./lib",
        "moduleResolution": "Node16",
        "rootDir": ".",
        "inlineSourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "ES2018",
        "lib": ["ES2018"],
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "lib"]
}
